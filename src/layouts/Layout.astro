---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='es-AR'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,500;1,600&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body
    class='min-h-screen max-w-6xl m-auto bg-amber-50 px-5 overflow-x-hidden'
  >
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: 'Fira Sans', sans-serif;
  }
</style>
